# Depends: popt slang 

name=newt
version=0.52.24
release=1
source="https://releases.pagure.org/$name/$name-$version.tar.gz"
build_opt="--with-gpm-support --with-python=python3.11"

pre_build() {
	sed -e '/install -m 644 $(LIBNEWT"/ s/^/#/' \
	    -e '/$(LIBNEWT":/,/rv/ s/^/#/'          \
	    -e 's/$(LIBNEWT"/$(LIBNEWTSH)/g'        \
	    -i Makefile.in
	}
