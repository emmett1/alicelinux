# Depends: dbus glib libusb libsecret gcr libgudev libsoup polkit udisks fuse libmtp

name=gvfs
version=1.52.2
release=1
source="https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz"
build_opt="-Dtmpfilesdir=no -Dsystemduserunitdir=no -Dlogind=false"

for i in dnssd afc afp goa bluray smb cdda google gphoto2 nfs sftp; do
	build_opt="$build_opt -D$i=false"
done
