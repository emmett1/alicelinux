name=binutils
version=2.42
release=1
source="https://sourceware.org/pub/$name/releases/$name-$version.tar.xz"

pkg_build() {
	cat > makeinfo <<EOF
#!/bin/sh
printf 'makeinfo (GNU texinfo) 5.2\n'
EOF

chmod +x makeinfo
export PATH="$PATH:$PWD"

	mkdir build
	cd build

	../configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-gold \
		--enable-ld=default \
		--enable-lto \
		--enable-plugins \
		--enable-shared \
		--disable-werror \
		--with-system-zlib \
		--disable-multilib \
		--disable-gdb \
		--disable-gprof \
		--disable-gprofng \
		--without-zstd \
		--with-lib-path=/usr/lib:/lib
	make DESTDIR=$PKG tooldir=/usr
	make DESTDIR=$PKG tooldir=/usr install
}