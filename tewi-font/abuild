# Depends: bdftopcf mkfontscale

name=tewi-font
version=2.0.2
release=1
source="https://github.com/lucy/${name}/archive/${version}/${name}-${version}.tar.gz"

pkg_build() {
	make var
	make all
	install -d -m755 "$PKG/usr/share/fonts/misc/"
	install -m644 -t "$PKG/usr/share/fonts/misc/" out/*.pcf.gz
}
