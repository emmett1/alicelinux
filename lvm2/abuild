# Depends: libaio 

name=lvm2
version=2.03.23
release=1
source="https://sourceware.org/ftp/$name/LVM2.${version}.tgz
	fix-stdio-usage.patch"
build_opt="
	--libdir=/usr/lib
	--exec-prefix=
	--enable-cmdlib
	--enable-pkgconfig
	--enable-udev_sync
	--with-udev-prefix=/usr
"

post_build() {
	rm -fr $PKG/usr/libexec/
}
