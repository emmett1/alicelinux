# Depends: perl-parse-yapp perl-json gnutls jansson dbus

name=samba
version=4.19.4
release=1
source="https://download.$name.org/pub/$name/stable/$name-$version.tar.gz
	nmbd.run
	smbd.run"
sv="nmbd.run smbd.run"
build_opt="--with-piddir=/run/samba
	--enable-fhs
	--without-ad-dc
	--without-systemd
	--without-ldap
	--without-ads
	--without-libunwind"

post_build() {
	install -m 0600 examples/smb.conf.default $PKG/etc/samba
}
