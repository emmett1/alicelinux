# Depends: bdftopcf mkfontscale

name=terminus-font
version=4.49.1
release=1
source="https://jaist.dl.sourceforge.net/project/${name}/${name}-${version%.*}/${name}-${version}.tar.gz"
build_opt="--x11dir=/usr/share/fonts/misc --otbdir=/usr/share/fonts/misc"

post_build() {
	install -Dm644 75-yes-terminus.conf \
		$PKG/etc/fonts/conf.avail/75-yes-terminus.conf
	install -d $PKG/etc/fonts/conf.d

	cd $PKG/etc/fonts/conf.d
	ln -s ../conf.avail/75-yes-terminus.conf .
}
