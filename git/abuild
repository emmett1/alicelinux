# Depends: curl expat openssl zlib

name=git
version=2.44.0
release=1
source="https://www.kernel.org/pub/software/scm/$name/$name-$version.tar.xz git"

pre_build() {
cat > config.mak <<EOF
NO_GETTEXT=YesPlease
NO_SVN_TESTS=YesPlease
NO_TCLTK=YesPlease
NO_NSEC=YesPlease
NO_PYTHON=YesPlease
NO_SYS_POLL_H=1
NO_CROSS_DIRECTORY_HARDLINKS=1
NO_INSTALL_HARDLINKS=1
EOF
}

post_build() {
	# git ports driver
	install -Dm755 $SRC/git $PKG/etc/ports/drivers/git

	# man pages
	#cp -Rf man $PKG/usr/share/man
}
