# Depends: poppler qt5 

name=poppler-qt5
version=24.02.0
release=1
source="https://poppler.freedesktop.org/poppler-$version.tar.xz"
build_opt="-DENABLE_UNSTABLE_API_ABI_HEADERS=OFF -DENABLE_QT5=ON -DENABLE_GLIB=OFF
	-DENABLE_UTILS=OFF -DENABLE_CPP=OFF -DENABLE_BOOST=OFF -DENABLE_QT6=OFF"

post_build() {
	rm $PKG/usr/lib/libpoppler.so*
	rm $PKG/usr/lib/pkgconfig/poppler.pc
}
